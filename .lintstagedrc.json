{
  "**/*.{ts,tsx,js,jsx,mjs,cjs}": [
    "bash -c 'npm run typecheck:affected'",
    "prettier --write",
    "eslint --fix",
    "cspell lint --no-must-find-files --no-progress"
  ],
  "**/*.{json,md,html,css,scss,yml,yaml}": ["prettier --write", "cspell lint --no-must-find-files --no-progress"]
}
