{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never",
    "source.sortImports": "never",
    "source.addMissingImports": "never",
    "source.removeUnusedImports": "never"
  },

  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  "eslint.format.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "files.exclude": {
    "**/.git/**": true,
    "**/.idea/**": true,
    "**/.nx/**": true,
    "**/.nyc_output/**": true,
    "**/.angular/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/tmp/**": true,
    "**/cypress/videos/**": true,
    "**/cypress/screenshots/**": true
  },

  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.idea/**": true,
    "**/node_modules/**": true,
    "**/.nx/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.angular/**": true,
    "**/.nyc_output/**": true,
    "**/tmp/**": true,
    "**/cypress/videos/**": true,
    "**/cypress/screenshots/**": true
  },

  "search.exclude": {
    "**/.git/**": true,
    "**/.idea/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.nx/**": true,
    "**/.angular/**": true,
    "**/.nyc_output/**": true,
    "**/tmp/**": true,
    "**/cypress/videos/**": true,
    "**/cypress/screenshots/**": true
  }
}
