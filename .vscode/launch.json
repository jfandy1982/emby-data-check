{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to edc-api",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/edc-api/dist/**/*.(m|c|)js", "!**/node_modules/**"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Attach to edc-ui-ng (Chrome)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/edc-ui-ng",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:/*": "${workspaceFolder}/*"
      }
    }
  ]
}
